    <ul class="list-unstyled navigation col-lg-7 d-flex  justify-content-end pe-4  align-content-center vertical-align-center " >
        <% if (locals.user){ %>
            <li class="ms-4 mt-2 " >
                <a href="/users/profile" style="text-decoration:none;">
                    <h4 class="text-light"><%= user.name %></h4>
                </a>
            </li>
            <li class="ms-4 mt-2" >
                <a href="/users/sign-out" style="text-decoration:none;">
                <h4 class="text-light">Sign Out
                    </h4>
                 </a>
            </li>
        <% }else{ %>

            <li class="ms-4 mt-2 " >
                <a href="/users/sign-in" style="text-decoration:none;">
                <h4 class="text-light">Sign In
            </h4></a>
            </li>

            <li class="ms-4 mt-2 text-light" >
                <a href="/users/sign-up" style="text-decoration:none;"><h4 class="text-light">Sign Up</h4></a>
            </li>
 

        <% } %>
